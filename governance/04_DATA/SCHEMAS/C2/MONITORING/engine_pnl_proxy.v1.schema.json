{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "C2_MONITORING_ENGINE_PNL_PROXY_V1",
  "title": "C2 Engine PnL Proxy v1 (from accounting attribution; NOT marks-based returns)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "produced_utc",
    "day_utc",
    "producer",
    "source_attribution_path",
    "source_attribution_sha256",
    "status",
    "reason_codes",
    "currency",
    "by_engine",
    "not_valid_for_return_correlation",
    "notes"
  ],
  "properties": {
    "schema_id": { "const": "C2_MONITORING_ENGINE_PNL_PROXY_V1" },
    "schema_version": { "const": "1.0.0" },
    "produced_utc": { "type": "string" },
    "day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
    "producer": { "type": "string", "minLength": 1 },

    "source_attribution_path": { "type": "string", "minLength": 1 },
    "source_attribution_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },

    "status": { "type": "string" },
    "reason_codes": { "type": "array", "items": { "type": "string" } },

    "currency": { "type": "string", "minLength": 3, "maxLength": 3 },

    "by_engine": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "engine_id",
          "realized_pnl_to_date",
          "unrealized_pnl",
          "defined_risk_exposure",
          "positions_count",
          "symbols"
        ],
        "properties": {
          "engine_id": { "type": "string", "minLength": 1 },
          "realized_pnl_to_date": { "type": "number" },
          "unrealized_pnl": { "type": "number" },
          "defined_risk_exposure": { "type": "number" },
          "positions_count": { "type": "integer", "minimum": 0 },
          "symbols": { "type": "array", "items": { "type": "string" } }
        }
      }
    },

    "not_valid_for_return_correlation": { "type": "boolean", "const": true },
    "notes": { "type": "array", "items": { "type": "string" } }
  }
}
