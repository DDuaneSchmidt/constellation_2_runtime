{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "C2_NAV_HISTORY_LEDGER_V1.schema.json",
  "title": "C2 NAV History Ledger v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "asof_day_utc",
    "days",
    "input_manifest",
    "produced_utc",
    "producer",
    "canonical_json_hash"
  ],
  "properties": {
    "schema_id": { "const": "C2_NAV_HISTORY_LEDGER_V1" },
    "schema_version": { "type": "integer", "const": 1 },
    "asof_day_utc": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "days": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "day_utc",
          "snapshot_path",
          "snapshot_sha256",
          "end_nav",
          "peak_nav_to_date",
          "drawdown_pct"
        ],
        "properties": {
          "day_utc": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
          },
          "snapshot_path": { "type": "string", "minLength": 1 },
          "snapshot_sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
          "end_nav": { "type": "string", "pattern": "^(0|[1-9][0-9]*)$" },
          "peak_nav_to_date": { "type": "string", "pattern": "^(0|[1-9][0-9]*)$" },
          "drawdown_pct": { "type": "string", "pattern": "^-?(0|[1-9][0-9]*)\\.[0-9]{6}$" }
        }
      }
    },
    "input_manifest": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "path", "sha256"],
        "properties": {
          "type": { "type": "string", "minLength": 1 },
          "path": { "type": "string", "minLength": 1 },
          "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
        }
      }
    },
    "produced_utc": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}Z$"
    },
    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["git_sha", "module", "repo"],
      "properties": {
        "git_sha": { "type": "string", "minLength": 1 },
        "module": { "type": "string", "minLength": 1 },
        "repo": { "type": "string", "const": "constellation_2_runtime" }
      }
    },
    "canonical_json_hash": {
      "type": ["string", "null"],
      "pattern": "^[0-9a-f]{64}$"
    }
  }
}
