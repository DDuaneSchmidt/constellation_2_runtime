{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "C2_DRAWDOWN_WINDOW_PACK_V1.schema.json",
  "title": "C2 Drawdown Window Pack v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "day_utc",
    "status",
    "windows",
    "input_manifest",
    "produced_utc",
    "producer",
    "canonical_json_hash"
  ],
  "properties": {
    "schema_id": { "const": "C2_DRAWDOWN_WINDOW_PACK_V1" },
    "schema_version": { "type": "integer", "const": 1 },
    "day_utc": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "status": {
      "type": "string",
      "enum": ["OK", "FAIL_INSUFFICIENT_HISTORY"]
    },
    "windows": {
      "type": "array",
      "minItems": 3,
      "maxItems": 3,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "window_days",
          "window_start_day_utc",
          "window_end_day_utc",
          "max_drawdown_pct"
        ],
        "properties": {
          "window_days": { "type": "integer", "enum": [30, 60, 90] },
          "window_start_day_utc": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
          },
          "window_end_day_utc": {
            "type": "string",
            "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
          },
          "max_drawdown_pct": {
            "type": "string",
            "pattern": "^-?(0|[1-9][0-9]*)\\.[0-9]{6}$"
          }
        }
      }
    },
    "reason_codes": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "input_manifest": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "path", "sha256"],
        "properties": {
          "type": { "type": "string", "minLength": 1 },
          "path": { "type": "string", "minLength": 1 },
          "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
        }
      }
    },
    "produced_utc": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}Z$"
    },
    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["git_sha", "module", "repo"],
      "properties": {
        "git_sha": { "type": "string", "minLength": 1 },
        "module": { "type": "string", "minLength": 1 },
        "repo": { "type": "string", "const": "constellation_2_runtime" }
      }
    },
    "canonical_json_hash": {
      "type": ["string", "null"],
      "pattern": "^[0-9a-f]{64}$"
    }
  }
}
