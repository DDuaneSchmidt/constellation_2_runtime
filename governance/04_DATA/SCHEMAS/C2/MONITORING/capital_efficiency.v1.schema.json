{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "C2_CAPITAL_EFFICIENCY_V1",
  "title": "C2 Capital Efficiency Diagnostics Artifact v1 (Phase J)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "status",
    "day_utc",
    "diagnostics",
    "by_engine",
    "input_manifest",
    "produced_utc",
    "producer",
    "reason_codes"
  ],
  "properties": {
    "schema_id": { "const": "C2_CAPITAL_EFFICIENCY_V1" },
    "schema_version": { "type": "integer", "const": 1 },
    "status": {
      "type": "string",
      "enum": [
        "OK",
        "DEGRADED_MISSING_INPUTS",
        "FAIL_CORRUPT_INPUTS"
      ]
    },
    "day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },

    "diagnostics": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "nav_total",
        "risk_budget_total",
        "open_risk_total",
        "capital_utilization_rate",
        "idle_capital_pct",
        "risk_budget_efficiency",
        "notes"
      ],
      "properties": {
        "nav_total": { "type": "integer", "minimum": 0 },
        "risk_budget_total": {
          "description": "Total risk budget dollars (or risk units) as integer, when provable; else null.",
          "anyOf": [{ "type": "null" }, { "type": "integer" }]
        },
        "open_risk_total": {
          "description": "Total open defined-risk dollars (or risk units) as integer, when provable; else null.",
          "anyOf": [{ "type": "null" }, { "type": "integer" }]
        },

        "capital_utilization_rate": {
          "description": "Utilization fraction, 6dp in [0,1].",
          "anyOf": [{ "type": "null" }, { "type": "string", "pattern": "^[0-1]\\.[0-9]{6}$" }]
        },
        "idle_capital_pct": {
          "description": "Idle fraction, 6dp in [0,1].",
          "anyOf": [{ "type": "null" }, { "type": "string", "pattern": "^[0-1]\\.[0-9]{6}$" }]
        },
        "risk_budget_efficiency": {
          "description": "Return per unit risk (decimal string 8dp) over evaluation window when provable; else null.",
          "anyOf": [{ "type": "null" }, { "type": "string", "pattern": "^-?[0-9]+\\.[0-9]{8}$" }]
        },

        "notes": { "type": "array", "items": { "type": "string", "minLength": 1 } }
      }
    },

    "by_engine": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["engine_id", "utilization_rate", "return_per_risk_unit", "notes"],
        "properties": {
          "engine_id": { "type": "string", "minLength": 1, "maxLength": 64 },
          "utilization_rate": {
            "anyOf": [{ "type": "null" }, { "type": "string", "pattern": "^[0-1]\\.[0-9]{6}$" }]
          },
          "return_per_risk_unit": {
            "anyOf": [{ "type": "null" }, { "type": "string", "pattern": "^-?[0-9]+\\.[0-9]{8}$" }]
          },
          "notes": { "type": "array", "items": { "type": "string", "minLength": 1 } }
        }
      }
    },

    "input_manifest": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "path", "sha256", "producer"],
        "properties": {
          "type": { "type": "string", "minLength": 1 },
          "path": { "type": "string", "minLength": 1 },
          "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
          "producer": { "type": "string", "minLength": 1 }
        }
      }
    },

    "produced_utc": { "type": "string", "format": "date-time" },

    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["repo", "git_sha", "module"],
      "properties": {
        "repo": { "type": "string", "minLength": 1 },
        "git_sha": { "type": "string", "minLength": 7 },
        "module": { "type": "string", "minLength": 1 }
      }
    },

    "reason_codes": { "type": "array", "items": { "type": "string", "minLength": 1 } }
  }
}
