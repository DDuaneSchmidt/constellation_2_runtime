{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "C2_ENGINE_CORRELATION_MATRIX_V1",
  "title": "C2 Engine Correlation Matrix Artifact v1 (Phase J)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "status",
    "day_utc",
    "window_days",
    "matrix",
    "flags",
    "input_manifest",
    "produced_utc",
    "producer",
    "reason_codes"
  ],
  "properties": {
    "schema_id": { "const": "C2_ENGINE_CORRELATION_MATRIX_V1" },
    "schema_version": { "type": "integer", "const": 1 },
    "status": {
      "type": "string",
      "enum": [
        "OK",
        "DEGRADED_INSUFFICIENT_HISTORY",
        "FAIL_CORRUPT_INPUTS"
      ]
    },
    "day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
    "window_days": { "type": "integer", "minimum": 2, "maximum": 4000 },

    "matrix": {
      "type": "object",
      "additionalProperties": false,
      "required": ["engine_ids", "corr"],
      "properties": {
        "engine_ids": {
          "type": "array",
          "minItems": 2,
          "items": { "type": "string", "minLength": 1, "maxLength": 64 }
        },
        "corr": {
          "description": "NxN correlation matrix aligned to engine_ids order; values quantized to 6dp in [-1,1].",
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "array",
            "minItems": 2,
            "items": {
              "type": "string",
              "pattern": "^-?[0-1]\\.[0-9]{6}$"
            }
          }
        }
      }
    },

    "flags": {
      "type": "object",
      "additionalProperties": false,
      "required": ["crowding_threshold", "sustained_days", "pairs"],
      "properties": {
        "crowding_threshold": { "type": "string", "pattern": "^[0-1]\\.[0-9]{2}$" },
        "sustained_days": { "type": "integer", "minimum": 1, "maximum": 3650 },
        "pairs": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["engine_a", "engine_b", "corr", "sustained", "flag"],
            "properties": {
              "engine_a": { "type": "string", "minLength": 1, "maxLength": 64 },
              "engine_b": { "type": "string", "minLength": 1, "maxLength": 64 },
              "corr": { "type": "string", "pattern": "^-?[0-1]\\.[0-9]{6}$" },
              "sustained": { "type": "integer", "minimum": 0, "maximum": 3650 },
              "flag": { "type": "boolean" }
            }
          }
        }
      }
    },

    "input_manifest": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "path", "sha256", "producer", "day_utc"],
        "properties": {
          "type": { "type": "string", "minLength": 1 },
          "path": { "type": "string", "minLength": 1 },
          "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
          "producer": { "type": "string", "minLength": 1 },
          "day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" }
        }
      }
    },

    "produced_utc": { "type": "string", "format": "date-time" },

    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["repo", "git_sha", "module"],
      "properties": {
        "repo": { "type": "string", "minLength": 1 },
        "git_sha": { "type": "string", "minLength": 7 },
        "module": { "type": "string", "minLength": 1 }
      }
    },

    "reason_codes": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    }
  }
}
