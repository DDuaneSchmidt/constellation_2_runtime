{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "C2_ECONOMIC_TRUTH_AVAILABILITY_CERTIFICATE_V1.schema.json",
  "title": "C2 Economic Truth Availability Certificate v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "day_utc",
    "ready",
    "checks",
    "missing_artifacts",
    "input_manifest",
    "produced_utc",
    "producer",
    "canonical_json_hash"
  ],
  "properties": {
    "schema_id": { "const": "C2_ECONOMIC_TRUTH_AVAILABILITY_CERTIFICATE_V1" },
    "schema_version": { "type": "integer", "const": 1 },
    "day_utc": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "ready": { "type": "boolean" },
    "checks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["check_id", "pass", "details", "evidence_paths"],
        "properties": {
          "check_id": { "type": "string", "minLength": 1 },
          "pass": { "type": "boolean" },
          "details": { "type": "string" },
          "evidence_paths": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          }
        }
      }
    },
    "missing_artifacts": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "reason_codes": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "input_manifest": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "path", "sha256"],
        "properties": {
          "type": { "type": "string", "minLength": 1 },
          "path": { "type": "string", "minLength": 1 },
          "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
        }
      }
    },
    "produced_utc": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}Z$"
    },
    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["git_sha", "module", "repo"],
      "properties": {
        "git_sha": { "type": "string", "minLength": 1 },
        "module": { "type": "string", "minLength": 1 },
        "repo": { "type": "string", "const": "constellation_2_runtime" }
      }
    },
    "canonical_json_hash": {
      "type": ["string", "null"],
      "pattern": "^[0-9a-f]{64}$"
    }
  }
}
