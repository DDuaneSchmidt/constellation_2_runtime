{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "C2_MONITORING_ENGINE_DAILY_RETURNS_V1",
  "title": "C2 Engine Daily Returns v1 (derived from accounting_v2 attribution when available)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "produced_utc",
    "day_utc",
    "producer",
    "status",
    "reason_codes",
    "inputs",
    "returns"
  ],
  "properties": {
    "schema_id": { "const": "C2_MONITORING_ENGINE_DAILY_RETURNS_V1" },
    "schema_version": { "const": "1.0.0" },
    "produced_utc": { "type": "string" },
    "day_utc": { "type": "string" },
    "producer": { "type": "string", "minLength": 1 },

    "status": { "type": "string", "enum": ["ACTIVE", "NOT_AVAILABLE"] },
    "reason_codes": { "type": "array", "items": { "type": "string" } },

    "inputs": {
      "type": "object",
      "additionalProperties": false,
      "required": ["attribution_today_path", "attribution_today_sha256", "attribution_prev_path", "attribution_prev_sha256"],
      "properties": {
        "attribution_today_path": { "type": "string" },
        "attribution_today_sha256": { "type": "string" },
        "attribution_prev_path": { "type": "string" },
        "attribution_prev_sha256": { "type": "string" }
      }
    },

    "returns": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["engine_id", "daily_return"],
        "properties": {
          "engine_id": { "type": "string" },
          "daily_return": { "type": "string" }
        }
      }
    }
  }
}
