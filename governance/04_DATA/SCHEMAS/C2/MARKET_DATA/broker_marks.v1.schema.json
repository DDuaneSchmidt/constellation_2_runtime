{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "C2_BROKER_MARKS_SNAPSHOT_V1",
  "title": "C2 Broker Marks Snapshot v1 (marks derived from broker-of-record statement)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "produced_utc",
    "day_utc",
    "producer",
    "source_broker_statement_path",
    "source_broker_statement_sha256",
    "currency",
    "cash_end",
    "marks",
    "notes"
  ],
  "properties": {
    "schema_id": { "const": "C2_BROKER_MARKS_SNAPSHOT_V1" },
    "schema_version": { "const": "1.0.0" },
    "produced_utc": { "type": "string" },
    "day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
    "producer": { "type": "string", "minLength": 1 },

    "source_broker_statement_path": { "type": "string", "minLength": 1 },
    "source_broker_statement_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },

    "currency": { "type": "string", "minLength": 3, "maxLength": 3 },
    "cash_end": { "type": "string", "pattern": "^-?[0-9]+(\\.[0-9]{1,8})?$" },

    "marks": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["symbol", "sec_type", "qty", "avg_cost", "market_value", "implied_price"],
        "properties": {
          "symbol": { "type": "string", "minLength": 1 },
          "sec_type": { "type": "string", "minLength": 1 },
          "qty": { "type": "string", "pattern": "^-?[0-9]+(\\.[0-9]{1,8})?$" },
          "avg_cost": { "type": "string", "pattern": "^-?[0-9]+(\\.[0-9]{1,8})?$" },
          "market_value": { "type": "string", "pattern": "^-?[0-9]+(\\.[0-9]{1,8})?$" },
          "implied_price": { "type": "string", "pattern": "^-?[0-9]+(\\.[0-9]{1,8})?$" },
          "currency": { "type": "string", "minLength": 3, "maxLength": 3 }
        }
      }
    },

    "notes": { "type": "array", "items": { "type": "string" } }
  }
}
