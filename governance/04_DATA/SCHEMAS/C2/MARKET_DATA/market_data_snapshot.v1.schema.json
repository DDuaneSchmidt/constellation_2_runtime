{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "c2.market_data_snapshot.v1",
  "title": "Constellation 2.0 Market Data Snapshot (Daily OHLCV) v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "dataset_version",
    "symbol",
    "timestamp_utc",
    "open",
    "high",
    "low",
    "close",
    "volume",
    "source_name",
    "source_hash",
    "ingested_utc"
  ],
  "properties": {
    "dataset_version": {
      "type": "string",
      "minLength": 1
    },
    "symbol": {
      "type": "string",
      "minLength": 1,
      "maxLength": 32,
      "pattern": "^[A-Z0-9\\.\\-]+$"
    },
    "timestamp_utc": {
      "type": "string",
      "format": "date-time",
      "pattern": "Z$"
    },
    "open": {
      "type": "number"
    },
    "high": {
      "type": "number"
    },
    "low": {
      "type": "number"
    },
    "close": {
      "type": "number"
    },
    "volume": {
      "type": "integer",
      "minimum": 0
    },
    "adjusted_close": {
      "type": "number"
    },
    "source_name": {
      "type": "string",
      "minLength": 1
    },
    "source_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "ingested_utc": {
      "type": "string",
      "format": "date-time",
      "pattern": "Z$"
    }
  }
}
