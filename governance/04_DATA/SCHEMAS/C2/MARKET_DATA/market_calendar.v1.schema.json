{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "c2.market_calendar.v1",
  "title": "Constellation 2.0 Market Trading Calendar v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "dataset_version",
    "exchange",
    "day_utc",
    "is_trading_session",
    "source_name",
    "source_hash",
    "ingested_utc"
  ],
  "properties": {
    "dataset_version": {
      "type": "string",
      "minLength": 1
    },
    "exchange": {
      "type": "string",
      "minLength": 1,
      "maxLength": 32,
      "pattern": "^[A-Z0-9_\\-]+$"
    },
    "day_utc": {
      "type": "string",
      "format": "date",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "is_trading_session": {
      "type": "boolean"
    },
    "source_name": {
      "type": "string",
      "minLength": 1
    },
    "source_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "ingested_utc": {
      "type": "string",
      "format": "date-time",
      "pattern": "Z$"
    }
  }
}
