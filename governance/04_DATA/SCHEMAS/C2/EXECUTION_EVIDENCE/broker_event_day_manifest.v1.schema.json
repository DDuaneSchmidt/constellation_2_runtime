{
  "$id": "https://constellation.local/schemas/broker_event_day_manifest.v1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Broker Event Day Manifest v1 (Audit Manifest for broker_event_log.v1.jsonl)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "day_utc",
    "produced_utc",
    "producer",
    "status",
    "reason_codes",
    "notes",
    "input_manifest",
    "log"
  ],
  "properties": {
    "schema_id": { "const": "broker_event_day_manifest" },
    "schema_version": { "const": "v1" },

    "day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
    "produced_utc": { "type": "string", "format": "date-time" },

    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["repo", "module", "git_sha"],
      "properties": {
        "repo": { "type": "string", "minLength": 1, "maxLength": 128 },
        "module": { "type": "string", "minLength": 1, "maxLength": 256 },
        "git_sha": { "type": "string", "minLength": 7, "maxLength": 64 }
      }
    },

    "status": { "type": "string", "enum": ["OK", "FAIL", "DEGRADED"] },

    "reason_codes": {
      "type": "array",
      "items": { "type": "string", "minLength": 1, "maxLength": 128 }
    },

    "notes": {
      "type": "array",
      "items": { "type": "string", "minLength": 1, "maxLength": 512 }
    },

    "input_manifest": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "path", "sha256"],
        "properties": {
          "type": { "type": "string", "minLength": 1, "maxLength": 128 },
          "path": { "type": "string", "minLength": 1, "maxLength": 1024 },
          "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
        }
      }
    },

    "log": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "log_path",
        "log_sha256",
        "line_count",
        "sequence_first",
        "sequence_last",
        "event_type_counts"
      ],
      "properties": {
        "log_path": { "type": "string", "minLength": 1, "maxLength": 1024 },
        "log_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
        "line_count": { "type": "integer", "minimum": 0 },
        "sequence_first": { "type": ["integer", "null"], "minimum": 1 },
        "sequence_last": { "type": ["integer", "null"], "minimum": 1 },
        "event_type_counts": {
          "type": "object",
          "additionalProperties": { "type": "integer", "minimum": 0 }
        }
      }
    }
  }
}
