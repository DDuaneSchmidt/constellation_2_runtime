{
  "$id": "https://constellation.local/schemas/C2_FILL_LEDGER_V1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "C2 Fill Ledger v1 (deterministic per-submission fill aggregation)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "produced_utc",
    "day_utc",
    "producer",
    "status",
    "reason_codes",
    "submission_id",
    "binding_hash",
    "engine_id",
    "source_intent_id",
    "intent_sha256",
    "order_qty",
    "filled_qty",
    "remaining_qty",
    "avg_fill_price_weighted",
    "lifecycle_status",
    "event_hashes",
    "canonical_json_hash"
  ],
  "properties": {
    "schema_id": { "const": "C2_FILL_LEDGER_V1" },
    "schema_version": { "type": "integer", "const": 1 },

    "produced_utc": { "type": "string", "format": "date-time" },
    "day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },

    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["repo", "git_sha", "module"],
      "properties": {
        "repo": { "type": "string", "minLength": 1 },
        "git_sha": { "type": "string", "pattern": "^[0-9a-f]{7,40}$" },
        "module": { "type": "string", "minLength": 1 }
      }
    },

    "status": { "type": "string", "enum": ["OK", "FAIL_CORRUPT_INPUTS", "FAIL_SCHEMA_VIOLATION"] },
    "reason_codes": { "type": "array", "items": { "type": "string", "minLength": 1 } },

    "submission_id": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
    "binding_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" },

    "engine_id": { "type": "string", "minLength": 1, "maxLength": 64 },
    "source_intent_id": { "type": "string", "minLength": 16, "maxLength": 128 },
    "intent_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },

    "order_qty": { "type": "integer", "minimum": 1 },
    "filled_qty": { "type": "integer", "minimum": 0 },
    "remaining_qty": { "type": "integer", "minimum": 0 },
    "avg_fill_price_weighted": { "type": "string", "pattern": "^[0-9]+(\\.[0-9]+)?$" },

    "lifecycle_status": {
      "type": "string",
      "enum": ["OPEN", "PARTIALLY_FILLED", "FILLED", "CANCELLED", "REJECTED", "UNKNOWN"]
    },

    "event_hashes": {
      "type": "array",
      "items": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
    },

    "canonical_json_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
  }
}
