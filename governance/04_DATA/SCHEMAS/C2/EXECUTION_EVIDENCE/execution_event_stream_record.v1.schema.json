{
  "$id": "https://constellation.local/schemas/C2_EXECUTION_EVENT_STREAM_RECORD_V1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "C2 Execution Event Stream Record v1 (broker-truth ingestion primitive)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "produced_utc",
    "day_utc",
    "producer",
    "status",
    "reason_codes",
    "submission_id",
    "binding_hash",
    "engine_id",
    "source_intent_id",
    "intent_sha256",
    "broker",
    "event_type",
    "event_time_utc",
    "observed_at_utc",
    "broker_ids",
    "order_state",
    "fill",
    "canonical_json_hash"
  ],
  "properties": {
    "schema_id": { "const": "C2_EXECUTION_EVENT_STREAM_RECORD_V1" },
    "schema_version": { "type": "integer", "const": 1 },

    "produced_utc": { "type": "string", "format": "date-time" },
    "day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },

    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["repo", "git_sha", "module"],
      "properties": {
        "repo": { "type": "string", "minLength": 1 },
        "git_sha": { "type": "string", "pattern": "^[0-9a-f]{7,40}$" },
        "module": { "type": "string", "minLength": 1 }
      }
    },

    "status": { "type": "string", "enum": ["OK", "FAIL_CORRUPT_INPUTS", "FAIL_SCHEMA_VIOLATION"] },
    "reason_codes": { "type": "array", "items": { "type": "string", "minLength": 1 } },

    "submission_id": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
    "binding_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" },

    "engine_id": { "type": "string", "minLength": 1, "maxLength": 64 },
    "source_intent_id": { "type": "string", "minLength": 16, "maxLength": 128 },
    "intent_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },

    "broker": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "environment"],
      "properties": {
        "name": { "type": "string", "enum": ["INTERACTIVE_BROKERS"] },
        "environment": { "type": "string", "enum": ["PAPER", "LIVE"] }
      }
    },

    "event_type": {
      "type": "string",
      "enum": [
        "ORDER_STATUS",
        "EXEC_DETAILS",
        "COMMISSION_REPORT",
        "BROKER_SNAPSHOT"
      ]
    },

    "event_time_utc": { "type": "string", "format": "date-time" },
    "observed_at_utc": { "type": "string", "format": "date-time" },

    "broker_ids": {
      "type": "object",
      "additionalProperties": false,
      "required": ["order_id", "perm_id"],
      "properties": {
        "order_id": { "type": ["integer", "null"], "minimum": 0 },
        "perm_id": { "type": ["integer", "null"], "minimum": 0 }
      }
    },

    "order_state": {
      "type": "object",
      "additionalProperties": false,
      "required": ["status", "filled_qty", "remaining_qty", "avg_fill_price"],
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "PRESUBMITTED",
            "SUBMITTED",
            "ACKNOWLEDGED",
            "INACTIVE",
            "PARTIALLY_FILLED",
            "FILLED",
            "CANCELLED",
            "REJECTED",
            "UNKNOWN"
          ]
        },
        "filled_qty": { "type": "integer", "minimum": 0 },
        "remaining_qty": { "type": "integer", "minimum": 0 },
        "avg_fill_price": { "type": "string", "pattern": "^[0-9]+(\\.[0-9]+)?$" }
      }
    },

    "fill": {
      "type": "object",
      "additionalProperties": false,
      "required": ["fill_qty", "fill_price", "commission", "currency"],
      "properties": {
        "fill_qty": { "type": "integer", "minimum": 0 },
        "fill_price": { "type": "string", "pattern": "^[0-9]+(\\.[0-9]+)?$" },
        "commission": { "type": "string", "pattern": "^-?[0-9]+(\\.[0-9]+)?$" },
        "currency": { "type": "string", "minLength": 3, "maxLength": 3 }
      }
    },

    "canonical_json_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
  }
}
