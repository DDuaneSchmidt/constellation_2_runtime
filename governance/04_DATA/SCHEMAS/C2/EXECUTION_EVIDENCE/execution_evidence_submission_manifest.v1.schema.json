{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "C2_EXECUTION_EVIDENCE_SUBMISSION_MANIFEST_V1",
  "title": "C2 Execution Evidence Submission Manifest v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "produced_utc",
    "day_utc",
    "producer",
    "status",
    "reason_codes",
    "input_manifest",
    "submission"
  ],
  "properties": {
    "schema_id": { "const": "C2_EXECUTION_EVIDENCE_SUBMISSION_MANIFEST_V1" },
    "schema_version": { "type": "integer", "const": 1 },

    "produced_utc": { "type": "string", "minLength": 1 },
    "day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },

    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["repo", "git_sha", "module"],
      "properties": {
        "repo": { "type": "string", "minLength": 1 },
        "git_sha": { "type": "string", "pattern": "^[0-9a-f]{7,40}$" },
        "module": { "type": "string", "minLength": 1 },
        "build": { "type": "object" }
      }
    },

    "status": {
      "type": "string",
      "enum": [
        "OK",
        "DEGRADED_MISSING_EXECUTION_EVENT",
        "FAIL_CORRUPT_INPUTS",
        "FAIL_SCHEMA_VIOLATION"
      ]
    },

    "reason_codes": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },

    "input_manifest": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "path", "sha256", "day_utc", "producer"],
        "properties": {
          "type": { "type": "string", "enum": ["phaseD_submission_dir", "other"] },
          "path": { "type": "string", "minLength": 1 },
          "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
          "day_utc": { "anyOf": [{ "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" }, { "type": "null" }] },
          "producer": { "type": "string", "minLength": 1 }
        }
      }
    },

    "submission": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "submission_id",
        "source_dir",
        "artifact_dir",
        "broker_submission_record",
        "execution_event_record",
        "veto_record"
      ],
      "properties": {
        "submission_id": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
        "source_dir": { "type": "string", "minLength": 1 },
        "artifact_dir": { "type": "string", "minLength": 1 },

        "broker_submission_record": {
          "$ref": "#/$defs/file_pointer"
        },
        "execution_event_record": {
          "anyOf": [
            { "$ref": "#/$defs/file_pointer" },
            { "type": "null" }
          ]
        },
        "veto_record": {
          "anyOf": [
            { "$ref": "#/$defs/file_pointer" },
            { "type": "null" }
          ]
        }
      }
    }
  },

  "$defs": {
    "file_pointer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["path", "sha256"],
      "properties": {
        "path": { "type": "string", "minLength": 1 },
        "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
      }
    }
  }
}
