{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "C2_ALLOCATION_DECISION_V1",
  "title": "C2 Allocation Decision v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "produced_utc",
    "day_utc",
    "producer",
    "status",
    "reason_codes",
    "input_manifest",
    "decision"
  ],
  "properties": {
    "schema_id": { "const": "C2_ALLOCATION_DECISION_V1" },
    "schema_version": { "type": "integer", "const": 1 },

    "produced_utc": { "type": "string", "minLength": 1 },
    "day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },

    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["repo", "git_sha", "module"],
      "properties": {
        "repo": { "type": "string", "minLength": 1 },
        "git_sha": { "type": "string", "pattern": "^[0-9a-f]{7,40}$" },
        "module": { "type": "string", "minLength": 1 },
        "build": { "type": "object" }
      }
    },

    "status": {
      "type": "string",
      "enum": [
        "ALLOW",
        "BLOCK",
        "FAIL_CORRUPT_INPUTS",
        "FAIL_SCHEMA_VIOLATION"
      ]
    },

    "reason_codes": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },

    "input_manifest": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "path", "sha256", "day_utc", "producer"],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "accounting_latest",
              "positions_truth",
              "risk_budget",
              "engine_mode_registry",
              "volatility_regime",
              "intent",
              "other"
            ]
          },
          "path": { "type": "string", "minLength": 1 },
          "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
          "day_utc": {
            "anyOf": [
              { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
              { "type": "null" }
            ]
          },
          "producer": { "type": "string", "minLength": 1 }
        }
      }
    },

    "decision": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "intent_id",
        "engine_id",
        "contracts_allowed",
        "effective_risk_budget",
        "binding_constraints"
      ],
      "properties": {
        "intent_id": { "type": "string", "minLength": 1 },
        "engine_id": { "type": "string", "minLength": 1 },
        "contracts_allowed": { "type": "integer", "minimum": 0 },
        "effective_risk_budget": { "type": "number" },
        "binding_constraints": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      }
    }
  }
}
