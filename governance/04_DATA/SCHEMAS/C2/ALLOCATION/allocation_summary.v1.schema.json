{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "C2_ALLOCATION_SUMMARY_V1",
  "title": "C2 Allocation Summary v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "produced_utc",
    "day_utc",
    "producer",
    "status",
    "reason_codes",
    "input_manifest",
    "summary"
  ],
  "properties": {
    "schema_id": { "const": "C2_ALLOCATION_SUMMARY_V1" },
    "schema_version": { "type": "integer", "const": 1 },

    "produced_utc": { "type": "string", "minLength": 1 },
    "day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },

    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["repo", "git_sha", "module"],
      "properties": {
        "repo": { "type": "string", "minLength": 1 },
        "git_sha": { "type": "string", "pattern": "^[0-9a-f]{7,40}$" },
        "module": { "type": "string", "minLength": 1 },
        "build": { "type": "object" }
      }
    },

    "status": {
      "type": "string",
      "enum": [
        "OK",
        "DEGRADED_MISSING_VOLATILITY_INPUT",
        "FAIL_CORRUPT_INPUTS",
        "FAIL_SCHEMA_VIOLATION"
      ]
    },

    "reason_codes": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },

    "input_manifest": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "path", "sha256", "day_utc", "producer"],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "accounting_latest",
              "positions_effective_latest",
              "positions_truth",
              "risk_budget",
              "engine_mode_registry",
              "volatility_regime",
              "intents_list",
              "other"
            ]
          },
          "path": { "type": "string", "minLength": 1 },
          "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
          "day_utc": {
            "anyOf": [
              { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
              { "type": "null" }
            ]
          },
          "producer": { "type": "string", "minLength": 1 }
        }
      }
    },

    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": ["decisions", "counts", "notes", "drawdown_enforcement"],
      "properties": {
        "decisions": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["intent_id", "status", "path", "sha256"],
            "properties": {
              "intent_id": { "type": "string", "minLength": 1 },
              "status": { "type": "string", "enum": ["ALLOW", "BLOCK"] },
              "path": { "type": "string", "minLength": 1 },
              "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
            }
          }
        },
        "counts": {
          "type": "object",
          "additionalProperties": false,
          "required": ["allow", "block"],
          "properties": {
            "allow": { "type": "integer", "minimum": 0 },
            "block": { "type": "integer", "minimum": 0 }
          }
        },
        "notes": { "type": "array", "items": { "type": "string" } },

        "drawdown_enforcement": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "contract_id",
            "nav_source_path",
            "nav_source_sha256",
            "nav_asof_day_utc",
            "rolling_peak_nav",
            "nav_total",
            "drawdown_abs",
            "drawdown_pct",
            "multiplier",
            "thresholds"
          ],
          "properties": {
            "contract_id": { "type": "string", "minLength": 1 },
            "nav_source_path": { "type": "string", "minLength": 1 },
            "nav_source_sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
            "nav_asof_day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },

            "rolling_peak_nav": { "type": "integer" },
            "nav_total": { "type": "integer" },
            "drawdown_abs": { "type": "integer" },

            "drawdown_pct": { "type": "string", "pattern": "^-?[0-9]+\\.[0-9]{6}$" },
            "multiplier": { "type": "string", "pattern": "^[0-9]+\\.[0-9]{2}$" },

            "thresholds": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["drawdown_pct", "multiplier"],
                "properties": {
                  "drawdown_pct": { "type": "string", "pattern": "^-?[0-9]+\\.[0-9]{6}$" },
                  "multiplier": { "type": "string", "pattern": "^[0-9]+\\.[0-9]{2}$" }
                }
              }
            }
          }
        }
      }
    }
  }
}
