{
  "$id": "https://constellation.local/schemas/day_root_anchor.v1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Day Root Anchor v1 (Tamper-Evident Day Closure, Audit-Proof)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "day_utc",
    "produced_utc",
    "producer",
    "status",
    "reason_codes",
    "anchors",
    "anchor_sha256"
  ],
  "properties": {
    "schema_id": { "const": "day_root_anchor" },
    "schema_version": { "const": "v1" },
    "day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
    "produced_utc": { "type": "string", "format": "date-time" },
    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["repo", "module", "git_sha"],
      "properties": {
        "repo": { "type": "string", "minLength": 1, "maxLength": 128 },
        "module": { "type": "string", "minLength": 1, "maxLength": 256 },
        "git_sha": { "type": "string", "minLength": 7, "maxLength": 64 }
      }
    },
    "status": { "type": "string", "enum": ["OK", "FAIL"] },
    "reason_codes": { "type": "array", "items": { "type": "string", "minLength": 1, "maxLength": 128 } },
    "anchors": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "inputs_frozen_sha256",
        "event_ledger_sha256",
        "daily_execution_state_sha256",
        "decision_record_sha256s"
      ],
      "properties": {
        "inputs_frozen_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
        "event_ledger_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
        "daily_execution_state_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
        "decision_record_sha256s": {
          "type": "array",
          "items": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
        }
      }
    },
    "anchor_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
  }
}
