{
  "$id": "https://constellation.local/schemas/execution_quality_bundle.v1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Execution Quality Bundle v1 (Counts + Latency, Audit-Proof)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "day_utc",
    "produced_utc",
    "producer",
    "status",
    "reason_codes",
    "input_manifest",
    "metrics"
  ],
  "properties": {
    "schema_id": { "const": "execution_quality_bundle" },
    "schema_version": { "const": "v1" },
    "day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
    "produced_utc": { "type": "string", "format": "date-time" },
    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["repo", "module", "git_sha"],
      "properties": {
        "repo": { "type": "string", "minLength": 1, "maxLength": 128 },
        "module": { "type": "string", "minLength": 1, "maxLength": 256 },
        "git_sha": { "type": "string", "minLength": 7, "maxLength": 64 }
      }
    },
    "status": { "type": "string", "enum": ["OK", "DEGRADED", "FAIL"] },
    "reason_codes": { "type": "array", "items": { "type": "string", "minLength": 1, "maxLength": 128 } },
    "input_manifest": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "path", "sha256"],
        "properties": {
          "type": { "type": "string", "minLength": 1, "maxLength": 128 },
          "path": { "type": "string", "minLength": 1, "maxLength": 1024 },
          "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
        }
      }
    },
    "metrics": {
      "type": "object",
      "additionalProperties": false,
      "required": ["submissions_total", "broker_events_total"],
      "properties": {
        "submissions_total": { "type": "integer", "minimum": 0 },
        "broker_events_total": { "type": "integer", "minimum": 0 },
        "notes": { "type": "array", "items": { "type": "string", "minLength": 1, "maxLength": 256 } }
      }
    }
  }
}
