{
  "$id": "https://constellation.local/schemas/daily_execution_state.v1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Daily Execution State v1 (Single Canonical Daily Record, Audit-Proof)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "day_utc",
    "produced_utc",
    "producer",
    "status",
    "reason_codes",
    "input_manifest",
    "summary",
    "daily_state_sha256"
  ],
  "properties": {
    "schema_id": { "const": "daily_execution_state" },
    "schema_version": { "const": "v1" },
    "day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
    "produced_utc": { "type": "string", "format": "date-time" },
    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["repo", "module", "git_sha"],
      "properties": {
        "repo": { "type": "string", "minLength": 1, "maxLength": 128 },
        "module": { "type": "string", "minLength": 1, "maxLength": 256 },
        "git_sha": { "type": "string", "minLength": 7, "maxLength": 64 }
      }
    },
    "status": { "type": "string", "enum": ["OK", "DEGRADED", "FAIL"] },
    "reason_codes": { "type": "array", "items": { "type": "string", "minLength": 1, "maxLength": 128 } },
    "input_manifest": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "path", "sha256"],
        "properties": {
          "type": { "type": "string", "minLength": 1, "maxLength": 128 },
          "path": { "type": "string", "minLength": 1, "maxLength": 1024 },
          "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
        }
      }
    },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "positions_snapshot",
        "accounting_nav",
        "allocation_summary",
        "engine_risk_budget_ledger",
        "capital_risk_envelope",
        "regime_snapshot_v2",
        "pipeline_manifest",
        "operator_gate_verdict",
        "decision_count"
      ],
      "properties": {
        "positions_snapshot": { "type": "object", "additionalProperties": false, "required": ["path", "sha256"], "properties": { "path": { "type": "string", "minLength": 1, "maxLength": 1024 }, "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" } } },
        "accounting_nav": { "type": "object", "additionalProperties": false, "required": ["path", "sha256"], "properties": { "path": { "type": "string", "minLength": 1, "maxLength": 1024 }, "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" } } },
        "allocation_summary": { "type": "object", "additionalProperties": false, "required": ["path", "sha256"], "properties": { "path": { "type": "string", "minLength": 1, "maxLength": 1024 }, "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" } } },
        "engine_risk_budget_ledger": { "type": "object", "additionalProperties": false, "required": ["path", "sha256"], "properties": { "path": { "type": "string", "minLength": 1, "maxLength": 1024 }, "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" } } },
        "capital_risk_envelope": { "type": "object", "additionalProperties": false, "required": ["path", "sha256"], "properties": { "path": { "type": "string", "minLength": 1, "maxLength": 1024 }, "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" } } },
        "regime_snapshot_v2": { "type": "object", "additionalProperties": false, "required": ["path", "sha256"], "properties": { "path": { "type": "string", "minLength": 1, "maxLength": 1024 }, "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" } } },
        "pipeline_manifest": { "type": "object", "additionalProperties": false, "required": ["path", "sha256"], "properties": { "path": { "type": "string", "minLength": 1, "maxLength": 1024 }, "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" } } },
        "operator_gate_verdict": { "type": "object", "additionalProperties": false, "required": ["path", "sha256"], "properties": { "path": { "type": "string", "minLength": 1, "maxLength": 1024 }, "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" } } },
        "decision_count": { "type": "integer", "minimum": 0 }
      }
    },
    "daily_state_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
  }
}
