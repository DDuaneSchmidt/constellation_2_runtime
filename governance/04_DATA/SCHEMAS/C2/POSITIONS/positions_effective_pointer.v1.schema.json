{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "C2_POSITIONS_EFFECTIVE_POINTER_V1",
  "title": "C2 Positions Effective Pointer v1 (selects best available positions snapshot for a day)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "produced_utc",
    "day_utc",
    "producer",
    "status",
    "reason_codes",
    "selection",
    "pointers"
  ],
  "properties": {
    "schema_id": { "const": "C2_POSITIONS_EFFECTIVE_POINTER_V1" },
    "schema_version": { "type": "integer", "const": 1 },

    "produced_utc": { "type": "string", "minLength": 1 },
    "day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },

    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["repo", "git_sha", "module"],
      "properties": {
        "repo": { "type": "string", "minLength": 1 },
        "git_sha": { "type": "string", "pattern": "^[0-9a-f]{7,40}$" },
        "module": { "type": "string", "minLength": 1 },
        "build": { "type": "object" }
      }
    },

    "status": {
      "type": "string",
      "enum": [
        "OK",
        "FAIL_CORRUPT_INPUTS",
        "FAIL_SCHEMA_VIOLATION"
      ]
    },

    "reason_codes": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },

    "selection": {
      "type": "object",
      "additionalProperties": false,
      "required": ["selected_schema_id", "selected_schema_version"],
      "properties": {
        "selected_schema_id": { "type": "string", "minLength": 1 },
        "selected_schema_version": { "type": "integer" }
      }
    },

    "pointers": {
      "type": "object",
      "additionalProperties": false,
      "required": ["snapshot_path", "snapshot_sha256"],
      "properties": {
        "snapshot_path": { "type": "string", "minLength": 1 },
        "snapshot_sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
      }
    }
  }
}
