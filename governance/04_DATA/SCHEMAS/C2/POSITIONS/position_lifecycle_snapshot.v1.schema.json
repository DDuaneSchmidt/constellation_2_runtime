{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "C2_POSITION_LIFECYCLE_SNAPSHOT_V1",
  "title": "C2 Position Lifecycle Snapshot v1 (bootstrap: OPEN-only; links to execution events)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "produced_utc",
    "day_utc",
    "producer",
    "status",
    "reason_codes",
    "input_manifest",
    "lifecycle"
  ],
  "properties": {
    "schema_id": { "const": "C2_POSITION_LIFECYCLE_SNAPSHOT_V1" },
    "schema_version": { "type": "integer", "const": 1 },

    "produced_utc": { "type": "string", "minLength": 1 },
    "day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },

    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["repo", "git_sha", "module"],
      "properties": {
        "repo": { "type": "string", "minLength": 1 },
        "git_sha": { "type": "string", "pattern": "^[0-9a-f]{7,40}$" },
        "module": { "type": "string", "minLength": 1 },
        "build": { "type": "object" }
      }
    },

    "status": {
      "type": "string",
      "enum": ["OK", "DEGRADED_MISSING_EXECUTION_EVENTS", "FAIL_CORRUPT_INPUTS", "FAIL_SCHEMA_VIOLATION"]
    },

    "reason_codes": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },

    "input_manifest": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "path", "sha256", "day_utc", "producer"],
        "properties": {
          "type": { "type": "string", "enum": ["positions_effective_pointer", "positions_snapshot", "execution_evidence_day_dir", "other"] },
          "path": { "type": "string", "minLength": 1 },
          "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
          "day_utc": { "anyOf": [{ "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" }, { "type": "null" }] },
          "producer": { "type": "string", "minLength": 1 }
        }
      }
    },

    "lifecycle": {
      "type": "object",
      "additionalProperties": false,
      "required": ["asof_utc", "items", "notes"],
      "properties": {
        "asof_utc": { "type": "string", "minLength": 1 },
        "notes": { "type": "array", "items": { "type": "string" } },
        "items": { "type": "array", "items": { "$ref": "#/$defs/lifecycle_item" } }
      }
    }
  },

  "$defs": {
    "instrument": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "underlying", "legs", "summary"],
      "properties": {
        "kind": { "type": "string", "enum": ["EQUITY", "OPTION_SINGLE", "OPTION_MULTI"] },
        "underlying": { "type": "string", "minLength": 1 },
        "summary": {
          "type": "object",
          "additionalProperties": false,
          "required": ["expiry_utc", "strike", "right"],
          "properties": {
            "expiry_utc": { "anyOf": [{ "type": "string", "minLength": 1 }, { "type": "null" }] },
            "strike": { "anyOf": [{ "type": "string", "minLength": 1 }, { "type": "null" }] },
            "right": { "anyOf": [{ "type": "string", "enum": ["C", "P"] }, { "type": "null" }] }
          }
        },
        "legs": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/instrument_leg" }
        }
      }
    },

    "instrument_leg": {
      "type": "object",
      "additionalProperties": false,
      "required": ["action", "expiry_utc", "strike", "right", "ratio", "ib_conId", "ib_localSymbol"],
      "properties": {
        "action": { "type": "string", "enum": ["BUY", "SELL"] },
        "expiry_utc": { "type": "string", "minLength": 1 },
        "strike": { "type": "string", "minLength": 1 },
        "right": { "type": "string", "enum": ["C", "P"] },
        "ratio": { "type": "integer", "minimum": 1 },
        "ib_conId": { "type": "integer" },
        "ib_localSymbol": { "type": "string", "minLength": 1 }
      }
    },

    "event_pointer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["submission_id", "path", "sha256"],
      "properties": {
        "submission_id": { "type": "string", "minLength": 16, "maxLength": 128 },
        "path": { "type": "string", "minLength": 1 },
        "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
      }
    },

    "lifecycle_item": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "position_id",
        "state",
        "opened_day_utc",
        "closed_day_utc",
        "instrument",
        "qty",
        "avg_cost_cents",
        "events",
        "notes"
      ],
      "properties": {
        "position_id": { "type": "string", "minLength": 16, "maxLength": 128 },
        "state": { "type": "string", "enum": ["OPEN", "CLOSED"] },
        "opened_day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
        "closed_day_utc": { "anyOf": [{ "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" }, { "type": "null" }] },
        "instrument": { "$ref": "#/$defs/instrument" },
        "qty": { "type": "integer" },
        "avg_cost_cents": { "type": "integer" },
        "events": { "type": "array", "items": { "$ref": "#/$defs/event_pointer" } },
        "notes": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}
