{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "C2_DEFINED_RISK_FAILURE_V1",
  "title": "C2 Defined Risk Failure v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_id", "schema_version", "produced_utc", "day_utc", "producer", "status", "reason_codes", "input_manifest", "failure"],
  "properties": {
    "schema_id": { "const": "C2_DEFINED_RISK_FAILURE_V1" },
    "schema_version": { "type": "integer", "const": 1 },
    "produced_utc": { "type": "string", "minLength": 1 },
    "day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["repo", "git_sha", "module"],
      "properties": {
        "repo": { "type": "string", "minLength": 1 },
        "git_sha": { "type": "string", "pattern": "^[0-9a-f]{7,40}$" },
        "module": { "type": "string", "minLength": 1 }
      }
    },
    "status": { "type": "string", "enum": ["FAIL_CORRUPT_INPUTS", "FAIL_SCHEMA_VIOLATION"] },
    "reason_codes": { "type": "array", "items": { "type": "string", "minLength": 1 } },
    "input_manifest": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "path", "sha256", "day_utc", "producer"],
        "properties": {
          "type": { "type": "string", "minLength": 1 },
          "path": { "type": "string", "minLength": 1 },
          "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
          "day_utc": { "anyOf": [{ "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" }, { "type": "null" }] },
          "producer": { "type": "string", "minLength": 1 }
        }
      }
    },
    "failure": {
      "type": "object",
      "additionalProperties": false,
      "required": ["code", "message", "details", "attempted_outputs"],
      "properties": {
        "code": { "type": "string", "minLength": 1 },
        "message": { "type": "string", "minLength": 1 },
        "details": { "type": "object" },
        "attempted_outputs": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["path", "sha256"],
            "properties": {
              "path": { "type": "string", "minLength": 1 },
              "sha256": { "anyOf": [{ "type": "string", "pattern": "^[0-9a-f]{64}$" }, { "type": "null" }] }
            }
          }
        }
      }
    }
  }
}
