{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "C2_DEFINED_RISK_SNAPSHOT_V1",
  "title": "C2 Defined Risk Snapshot v1 (max_loss_cents from order_plan.risk_proof when provable)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "produced_utc",
    "day_utc",
    "producer",
    "status",
    "reason_codes",
    "input_manifest",
    "defined_risk"
  ],
  "properties": {
    "schema_id": { "const": "C2_DEFINED_RISK_SNAPSHOT_V1" },
    "schema_version": { "type": "integer", "const": 1 },

    "produced_utc": { "type": "string", "minLength": 1 },
    "day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },

    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["repo", "git_sha", "module"],
      "properties": {
        "repo": { "type": "string", "minLength": 1 },
        "git_sha": { "type": "string", "pattern": "^[0-9a-f]{7,40}$" },
        "module": { "type": "string", "minLength": 1 },
        "build": { "type": "object" }
      }
    },

    "status": {
      "type": "string",
      "enum": ["OK", "DEGRADED_PARTIAL_DEFINED_RISK", "FAIL_CORRUPT_INPUTS", "FAIL_SCHEMA_VIOLATION"]
    },

    "reason_codes": { "type": "array", "items": { "type": "string", "minLength": 1 } },

    "input_manifest": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "path", "sha256", "day_utc", "producer"],
        "properties": {
          "type": { "type": "string", "enum": ["positions_effective_pointer", "positions_snapshot", "execution_evidence_day_dir", "other"] },
          "path": { "type": "string", "minLength": 1 },
          "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
          "day_utc": { "anyOf": [{ "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" }, { "type": "null" }] },
          "producer": { "type": "string", "minLength": 1 }
        }
      }
    },

    "defined_risk": {
      "type": "object",
      "additionalProperties": false,
      "required": ["currency", "asof_utc", "items", "notes"],
      "properties": {
        "currency": { "type": "string", "minLength": 1 },
        "asof_utc": { "type": "string", "minLength": 1 },
        "notes": { "type": "array", "items": { "type": "string" } },
        "items": { "type": "array", "items": { "$ref": "#/$defs/item" } }
      }
    }
  },

  "$defs": {
    "item": {
      "type": "object",
      "additionalProperties": false,
      "required": ["position_id", "underlying", "market_exposure_type", "max_loss_cents", "sources", "notes"],
      "properties": {
        "position_id": { "type": "string", "minLength": 16, "maxLength": 128 },
        "underlying": { "type": "string", "minLength": 1 },
        "market_exposure_type": { "type": "string", "enum": ["DEFINED_RISK", "UNDEFINED_RISK"] },
        "max_loss_cents": { "anyOf": [{ "type": "integer" }, { "type": "null" }] },
        "sources": {
          "type": "object",
          "additionalProperties": false,
          "required": ["order_plan_path", "order_plan_sha256"],
          "properties": {
            "order_plan_path": { "type": "string", "minLength": 1 },
            "order_plan_sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
          }
        },
        "notes": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}
