{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "c2.risk.global_kill_switch_state.v1",
  "title": "C2 Global Kill Switch State v1 (Override Target Exposure, Audit-Proof)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "day_utc",
    "produced_utc",
    "producer",
    "state",
    "allow_entries",
    "allow_exits",
    "forced_mode",
    "reason_codes",
    "input_manifest",
    "state_sha256"
  ],
  "properties": {
    "schema_id": { "type": "string", "const": "global_kill_switch_state" },
    "schema_version": { "type": "string", "const": "v1" },
    "day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
    "produced_utc": { "type": "string", "minLength": 1 },
    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["repo", "module", "git_sha"],
      "properties": {
        "repo": { "type": "string", "minLength": 1, "maxLength": 128 },
        "module": { "type": "string", "minLength": 1, "maxLength": 256 },
        "git_sha": { "type": "string", "minLength": 7, "maxLength": 64 }
      }
    },
    "state": { "type": "string", "enum": ["ACTIVE", "INACTIVE"] },
    "allow_entries": { "type": "boolean" },
    "allow_exits": { "type": "boolean" },
    "forced_mode": { "type": "string", "enum": ["NORMAL", "REDUCE_ONLY", "FLATTEN_ONLY"] },
    "reason_codes": { "type": "array", "items": { "type": "string", "minLength": 1, "maxLength": 128 } },
    "input_manifest": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "path", "sha256"],
        "properties": {
          "type": { "type": "string", "minLength": 1, "maxLength": 128 },
          "path": { "type": "string", "minLength": 1, "maxLength": 1024 },
          "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
        }
      }
    },
    "state_sha256": {
      "type": "string",
      "description": "sha256 of canonical JSON for this document, excluding this field"
    }
  }
}
