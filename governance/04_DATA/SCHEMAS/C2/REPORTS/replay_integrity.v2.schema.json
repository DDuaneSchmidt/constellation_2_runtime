{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "C2_REPLAY_INTEGRITY_V2_SCHEMA",
  "title": "C2 Replay Integrity v2 (Truth-Relative Paths, Deterministic Replay Hash Sealing)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "day_utc",
    "produced_utc",
    "producer",
    "status",
    "replay_hash",
    "input_hash_set",
    "reproducibility_check",
    "mismatch_diff",
    "reason_codes",
    "report_sha256"
  ],
  "properties": {
    "schema_id": { "type": "string", "const": "C2_REPLAY_INTEGRITY_V2" },
    "schema_version": { "type": "integer", "const": 2 },

    "day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
    "produced_utc": { "type": "string", "minLength": 1 },

    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["repo", "git_sha", "module"],
      "properties": {
        "repo": { "type": "string", "minLength": 1, "maxLength": 128 },
        "git_sha": { "type": "string", "minLength": 7, "maxLength": 64 },
        "module": { "type": "string", "minLength": 1, "maxLength": 256 }
      }
    },

    "status": { "type": "string", "enum": ["OK", "FAIL"] },

    "replay_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" },

    "input_hash_set": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "path", "sha256", "present"],
        "properties": {
          "type": { "type": "string", "minLength": 1, "maxLength": 128 },
          "path": { "type": "string", "minLength": 1, "maxLength": 1024 },
          "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
          "present": { "type": "boolean" }
        }
      }
    },

    "reproducibility_check": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mode", "expected_replay_hash", "observed_replay_hash", "pass"],
      "properties": {
        "mode": { "type": "string", "enum": ["WRITE", "CHECK"] },
        "expected_replay_hash": { "type": ["string", "null"], "pattern": "^[a-f0-9]{64}$" },
        "observed_replay_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
        "pass": { "type": "boolean" }
      }
    },

    "mismatch_diff": {
      "type": "object",
      "additionalProperties": false,
      "required": ["missing_types", "sha_mismatches"],
      "properties": {
        "missing_types": { "type": "array", "items": { "type": "string", "minLength": 1 } },
        "sha_mismatches": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["type", "path", "expected_sha256", "observed_sha256"],
            "properties": {
              "type": { "type": "string", "minLength": 1 },
              "path": { "type": "string", "minLength": 1 },
              "expected_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
              "observed_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
            }
          }
        }
      }
    },

    "reason_codes": { "type": "array", "items": { "type": "string", "minLength": 1, "maxLength": 128 } },

    "report_sha256": {
      "type": "string",
      "description": "sha256 of canonical JSON for this document, excluding this field",
      "pattern": "^[a-f0-9]{64}$"
    }
  }
}
