{
  "$id": "C2_REPORTS_FAILURE_INJECTION_HARNESS_V1",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "properties": {
    "day_utc": {
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
      "type": "string"
    },
    "injections": {
      "additionalProperties": false,
      "properties": {
        "attribution_missing": {
          "type": "boolean"
        },
        "correlation_override": {
          "type": "string"
        },
        "mark_delay_seconds": {
          "minimum": 0,
          "type": "integer"
        },
        "nav_missing": {
          "type": "boolean"
        },
        "replay_drift_bps": {
          "type": "string"
        }
      },
      "type": "object"
    },
    "input_manifest": {
      "items": {
        "additionalProperties": false,
        "properties": {
          "path": {
            "type": "string"
          },
          "sha256": {
            "type": "string"
          },
          "type": {
            "type": "string"
          }
        },
        "required": [
          "type",
          "path",
          "sha256"
        ],
        "type": "object"
      },
      "type": "array"
    },
    "notes": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "produced_utc": {
      "type": "string"
    },
    "producer": {
      "additionalProperties": false,
      "properties": {
        "git_sha": {
          "type": "string"
        },
        "module": {
          "type": "string"
        },
        "repo": {
          "type": "string"
        }
      },
      "required": [
        "repo",
        "module",
        "git_sha"
      ],
      "type": "object"
    },
    "scenario_id": {
      "type": "string"
    },
    "schema_id": {
      "const": "failure_injection_harness"
    },
    "schema_version": {
      "const": "v1"
    },
    "simulated_gates": {
      "items": {
        "additionalProperties": false,
        "properties": {
          "base_status": {
            "type": "string"
          },
          "delta": {
            "type": "string"
          },
          "gate_id": {
            "type": "string"
          },
          "reason": {
            "type": "string"
          },
          "simulated_status": {
            "type": "string"
          }
        },
        "required": [
          "gate_id",
          "base_status",
          "simulated_status",
          "delta",
          "reason"
        ],
        "type": "object"
      },
      "type": "array"
    }
  },
  "required": [
    "schema_id",
    "schema_version",
    "produced_utc",
    "day_utc",
    "producer",
    "scenario_id",
    "injections",
    "simulated_gates",
    "notes",
    "input_manifest"
  ],
  "title": "C2 Failure Injection Harness Report v1",
  "type": "object"
}
