{
  "$id": "C2_REPORTS_TRUTH_SURFACE_AUTHORITY_GATE_V1",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "properties": {
    "day_utc": {
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
      "type": "string"
    },
    "findings": {
      "items": {
        "additionalProperties": true,
        "type": "object"
      },
      "type": "array"
    },
    "input_manifest": {
      "items": {
        "additionalProperties": false,
        "properties": {
          "path": {
            "type": "string"
          },
          "sha256": {
            "type": "string"
          },
          "type": {
            "type": "string"
          }
        },
        "required": [
          "type",
          "path",
          "sha256"
        ],
        "type": "object"
      },
      "type": "array"
    },
    "produced_utc": {
      "type": "string"
    },
    "producer": {
      "additionalProperties": false,
      "properties": {
        "git_sha": {
          "type": "string"
        },
        "module": {
          "type": "string"
        },
        "repo": {
          "type": "string"
        }
      },
      "required": [
        "repo",
        "module",
        "git_sha"
      ],
      "type": "object"
    },
    "reason_codes": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "schema_id": {
      "const": "truth_surface_authority_gate"
    },
    "schema_version": {
      "const": "v1"
    },
    "status": {
      "enum": [
        "PASS",
        "FAIL"
      ],
      "type": "string"
    }
  },
  "required": [
    "schema_id",
    "schema_version",
    "produced_utc",
    "day_utc",
    "producer",
    "status",
    "reason_codes",
    "findings",
    "input_manifest"
  ],
  "title": "C2 Truth Surface Authority Gate v1",
  "type": "object"
}
