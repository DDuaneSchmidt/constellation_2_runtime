{
  "$id": "https://constellation.local/schemas/C2_EXECUTION_RECONCILIATION_V1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "C2 Execution Reconciliation v1 (broker vs truth consistency)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "produced_utc",
    "day_utc",
    "producer",
    "status",
    "reason_codes",
    "input_manifest",
    "checks",
    "canonical_json_hash"
  ],
  "properties": {
    "schema_id": { "const": "C2_EXECUTION_RECONCILIATION_V1" },
    "schema_version": { "type": "integer", "const": 1 },

    "produced_utc": { "type": "string", "format": "date-time" },
    "day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },

    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["repo", "git_sha", "module"],
      "properties": {
        "repo": { "type": "string", "minLength": 1 },
        "git_sha": { "type": "string", "pattern": "^[0-9a-f]{7,40}$" },
        "module": { "type": "string", "minLength": 1 }
      }
    },

    "status": { "type": "string", "enum": ["PASS", "FAIL"] },
    "reason_codes": { "type": "array", "items": { "type": "string", "minLength": 1 } },

    "input_manifest": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "path", "sha256"],
        "properties": {
          "type": { "type": "string", "minLength": 1 },
          "path": { "type": "string", "minLength": 1, "maxLength": 1024 },
          "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
        }
      }
    },

    "checks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["check_id", "pass", "details"],
        "properties": {
          "check_id": { "type": "string", "minLength": 1, "maxLength": 128 },
          "pass": { "type": "boolean" },
          "details": { "type": "string", "minLength": 1, "maxLength": 2000 }
        }
      }
    },

    "canonical_json_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
  }
}
