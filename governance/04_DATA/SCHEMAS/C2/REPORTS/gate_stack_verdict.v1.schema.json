{
  "$id": "C2_REPORTS_GATE_STACK_VERDICT_V1",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "properties": {
    "blocking_class": {
      "enum": [
        "CLASS1_SYSTEM_HARD_STOP",
        "CLASS2_RISK_HARD_STOP",
        "CLASS3_CONTROLLED_DEGRADATION",
        "CLASS4_ADVISORY",
        "NONE"
      ],
      "type": "string"
    },
    "day_utc": {
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
      "type": "string"
    },
    "gates": {
      "items": {
        "additionalProperties": false,
        "properties": {
          "artifact_path": {
            "type": "string"
          },
          "artifact_sha256": {
            "type": "string"
          },
          "blocking": {
            "type": "boolean"
          },
          "gate_class": {
            "type": "string"
          },
          "gate_id": {
            "type": "string"
          },
          "reason_codes": {
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "required": {
            "type": "boolean"
          },
          "status": {
            "enum": [
              "PASS",
              "FAIL",
              "OK",
              "DEGRADED",
              "MISSING",
              "UNKNOWN"
            ],
            "type": "string"
          }
        },
        "required": [
          "gate_id",
          "gate_class",
          "required",
          "blocking",
          "status",
          "artifact_path",
          "artifact_sha256",
          "reason_codes"
        ],
        "type": "object"
      },
      "type": "array"
    },
    "input_manifest": {
      "items": {
        "additionalProperties": false,
        "properties": {
          "path": {
            "type": "string"
          },
          "sha256": {
            "type": "string"
          },
          "type": {
            "type": "string"
          }
        },
        "required": [
          "type",
          "path",
          "sha256"
        ],
        "type": "object"
      },
      "type": "array"
    },
    "produced_utc": {
      "type": "string"
    },
    "producer": {
      "additionalProperties": false,
      "properties": {
        "git_sha": {
          "type": "string"
        },
        "module": {
          "type": "string"
        },
        "repo": {
          "type": "string"
        }
      },
      "required": [
        "repo",
        "module",
        "git_sha"
      ],
      "type": "object"
    },
    "reason_codes": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "schema_id": {
      "const": "gate_stack_verdict"
    },
    "schema_version": {
      "const": "v1"
    },
    "status": {
      "enum": [
        "PASS",
        "FAIL"
      ],
      "type": "string"
    }
  },
  "required": [
    "schema_id",
    "schema_version",
    "produced_utc",
    "day_utc",
    "producer",
    "status",
    "reason_codes",
    "gates",
    "input_manifest"
  ],
  "title": "C2 Gate Stack Verdict v1",
  "type": "object"
}
