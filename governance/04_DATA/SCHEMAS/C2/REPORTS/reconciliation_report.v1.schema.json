{
  "$id": "https://constellation.local/schemas/reconciliation_report.v1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Reconciliation Report v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "day_utc",
    "produced_utc",
    "producer",
    "status",
    "reason_codes",
    "input_manifest",
    "broker_side",
    "truth_side",
    "comparisons"
  ],
  "properties": {
    "schema_id": { "const": "reconciliation_report" },
    "schema_version": { "const": "v1" },

    "day_utc": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },

    "produced_utc": { "type": "string", "format": "date-time" },

    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["repo", "module", "git_sha"],
      "properties": {
        "repo": { "type": "string", "minLength": 1, "maxLength": 128 },
        "module": { "type": "string", "minLength": 1, "maxLength": 256 },
        "git_sha": { "type": "string", "minLength": 7, "maxLength": 64 }
      }
    },

    "status": {
      "type": "string",
      "enum": ["OK", "FAIL", "DEGRADED"]
    },

    "reason_codes": {
      "type": "array",
      "items": { "type": "string", "minLength": 1, "maxLength": 128 }
    },

    "notes": {
      "type": "array",
      "items": { "type": "string", "minLength": 1, "maxLength": 512 }
    },

    "input_manifest": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "path", "sha256"],
        "properties": {
          "type": { "type": "string", "minLength": 1, "maxLength": 128 },
          "path": { "type": "string", "minLength": 1, "maxLength": 1024 },
          "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
        }
      }
    },

    "broker_side": {
      "type": "object",
      "additionalProperties": false,
      "required": ["phaseD_submissions_root", "submission_ids", "counts", "filled_qty_total"],
      "properties": {
        "phaseD_submissions_root": { "type": "string" },
        "submission_ids": { "type": "array", "items": { "type": "string", "minLength": 1, "maxLength": 128 } },
        "counts": {
          "type": "object",
          "additionalProperties": false,
          "required": ["submissions_total"],
          "properties": {
            "submissions_total": { "type": "integer", "minimum": 0 }
          }
        },
        "filled_qty_total": { "type": "integer", "minimum": 0 }
      }
    },

    "truth_side": {
      "type": "object",
      "additionalProperties": false,
      "required": ["exec_evidence_day_dir", "submission_ids", "counts", "filled_qty_total"],
      "properties": {
        "exec_evidence_day_dir": { "type": "string" },
        "submission_ids": { "type": "array", "items": { "type": "string", "minLength": 1, "maxLength": 128 } },
        "counts": {
          "type": "object",
          "additionalProperties": false,
          "required": ["submissions_total"],
          "properties": {
            "submissions_total": { "type": "integer", "minimum": 0 }
          }
        },
        "filled_qty_total": { "type": "integer", "minimum": 0 }
      }
    },

    "comparisons": {
      "type": "object",
      "additionalProperties": false,
      "required": ["missing_in_truth", "extra_in_truth", "filled_qty_delta"],
      "properties": {
        "missing_in_truth": { "type": "array", "items": { "type": "string", "minLength": 1, "maxLength": 128 } },
        "extra_in_truth": { "type": "array", "items": { "type": "string", "minLength": 1, "maxLength": 128 } },
        "filled_qty_delta": { "type": "integer" },

        "cash": {
          "type": ["object", "null"],
          "additionalProperties": false,
          "required": ["status", "reason"],
          "properties": {
            "status": { "type": "string", "enum": ["OK", "DEGRADED", "MISSING"] },
            "reason": { "type": "string", "minLength": 1, "maxLength": 256 }
          }
        },

        "positions": {
          "type": ["object", "null"],
          "additionalProperties": false,
          "required": ["status", "reason"],
          "properties": {
            "status": { "type": "string", "enum": ["OK", "DEGRADED", "MISSING"] },
            "reason": { "type": "string", "minLength": 1, "maxLength": 256 }
          }
        }
      }
    }
  }
}
