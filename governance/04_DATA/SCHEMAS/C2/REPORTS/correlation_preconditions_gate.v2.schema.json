{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "C2_CORRELATION_PRECONDITIONS_GATE_V2",
  "title": "C2 Correlation Preconditions Gate v2 (v2 truth surfaces + engine returns readiness)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "produced_utc",
    "day_utc",
    "producer",
    "status",
    "fail_closed",
    "checks",
    "notes"
  ],
  "properties": {
    "schema_id": { "const": "C2_CORRELATION_PRECONDITIONS_GATE_V2" },
    "schema_version": { "const": "1.0.0" },
    "produced_utc": { "type": "string" },
    "day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
    "producer": { "type": "string", "minLength": 1 },

    "status": { "type": "string", "enum": ["PASS", "FAIL"] },
    "fail_closed": { "type": "boolean" },

    "checks": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "accounting_nav_v2_active",
        "accounting_attribution_v2_active",
        "engine_linkage_available",
        "engine_daily_returns_active"
      ],
      "properties": {
        "accounting_nav_v2_active": { "type": "boolean" },
        "accounting_attribution_v2_active": { "type": "boolean" },
        "engine_linkage_available": { "type": "boolean" },
        "engine_daily_returns_active": { "type": "boolean" }
      }
    },

    "notes": { "type": "array", "items": { "type": "string" } }
  }
}
