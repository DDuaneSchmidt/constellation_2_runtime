{
  "$id": "https://constellation.local/schemas/operator_gate_verdict.v3.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Operator Gate Verdict v3 (SAFE_IDLE aware; forward-only readiness)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "day_utc",
    "produced_utc",
    "producer",
    "checks",
    "missing_artifacts",
    "hash_mismatches",
    "ready",
    "exit_code",
    "verdict_sha256"
  ],
  "properties": {
    "schema_id": { "const": "operator_gate_verdict.v3" },
    "day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
    "produced_utc": { "type": "string", "format": "date-time" },

    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["component", "version", "git_sha"],
      "properties": {
        "component": { "type": "string", "minLength": 1, "maxLength": 256 },
        "version": { "type": "string", "minLength": 1, "maxLength": 32 },
        "git_sha": { "type": "string", "minLength": 7, "maxLength": 64 }
      }
    },

    "checks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["check_id", "pass", "evidence_paths", "details"],
        "properties": {
          "check_id": { "type": "string", "minLength": 1, "maxLength": 128 },
          "pass": { "type": "boolean" },
          "evidence_paths": { "type": "array", "items": { "type": "string", "minLength": 1, "maxLength": 1024 } },
          "details": { "type": "string", "minLength": 1, "maxLength": 512 }
        }
      }
    },

    "missing_artifacts": { "type": "array", "items": { "type": "string", "minLength": 1, "maxLength": 1024 } },
    "hash_mismatches": { "type": "array", "items": { "type": "object" } },

    "ready": { "type": "boolean" },
    "exit_code": { "type": "integer", "minimum": 0, "maximum": 255 },
    "verdict_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
  }
}
