{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "C2_BROKER_RECONCILIATION_V1",
  "title": "C2 Broker vs Internal Reconciliation v1 (fail-closed gate artifact)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "produced_utc",
    "day_utc",
    "producer",
    "status",
    "fail_closed",
    "broker_statement_path",
    "broker_statement_sha256",
    "internal_positions_path",
    "internal_positions_sha256",
    "internal_cash_ledger_path",
    "internal_cash_ledger_sha256",
    "cash_diff",
    "position_mismatches",
    "tolerances",
    "notes"
  ],
  "properties": {
    "schema_id": { "const": "C2_BROKER_RECONCILIATION_V1" },
    "schema_version": { "const": "1.0.0" },
    "produced_utc": { "type": "string" },
    "day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
    "producer": { "type": "string", "minLength": 1 },

    "status": { "type": "string", "enum": ["PASS", "FAIL", "MISSING_INPUTS"] },
    "fail_closed": { "type": "boolean" },

    "broker_statement_path": { "type": "string", "minLength": 1 },
    "broker_statement_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },

    "internal_positions_path": { "type": "string", "minLength": 1 },
    "internal_positions_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },

    "internal_cash_ledger_path": { "type": "string", "minLength": 1 },
    "internal_cash_ledger_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },

    "cash_diff": { "type": "string", "pattern": "^-?[0-9]+(\\.[0-9]{1,8})?$" },

    "position_mismatches": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["symbol", "sec_type", "internal_qty", "broker_qty", "qty_diff"],
        "properties": {
          "symbol": { "type": "string" },
          "sec_type": { "type": "string" },
          "internal_qty": { "type": "string" },
          "broker_qty": { "type": "string" },
          "qty_diff": { "type": "string" }
        }
      }
    },

    "tolerances": {
      "type": "object",
      "additionalProperties": false,
      "required": ["cash_abs", "qty_abs"],
      "properties": {
        "cash_abs": { "type": "string", "pattern": "^[0-9]+(\\.[0-9]{1,8})?$" },
        "qty_abs": { "type": "string", "pattern": "^[0-9]+(\\.[0-9]{1,8})?$" }
      }
    },

    "notes": { "type": "array", "items": { "type": "string" } }
  }
}
