{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "C2_ENGINE_CORRELATION_GATE_V1",
  "title": "C2 Engine Correlation Gate v1 (fail-closed verdict)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "produced_utc",
    "day_utc",
    "producer",
    "input_correlation_matrix_path",
    "input_correlation_matrix_sha256",
    "threshold_max_pairwise",
    "max_pairwise",
    "status",
    "fail_closed",
    "notes"
  ],
  "properties": {
    "schema_id": { "const": "C2_ENGINE_CORRELATION_GATE_V1" },
    "schema_version": { "const": "1.0.0" },
    "produced_utc": { "type": "string" },
    "day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
    "producer": { "type": "string", "minLength": 1 },

    "input_correlation_matrix_path": { "type": "string", "minLength": 1 },
    "input_correlation_matrix_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },

    "threshold_max_pairwise": { "type": "string", "pattern": "^[0-9]+(\\.[0-9]{1,8})?$" },
    "max_pairwise": { "type": "string", "pattern": "^-?[0-9]+(\\.[0-9]{1,8})?$" },

    "status": { "type": "string", "enum": ["PASS", "FAIL", "MISSING_INPUTS"] },
    "fail_closed": { "type": "boolean" },
    "notes": { "type": "array", "items": { "type": "string" } }
  }
}
