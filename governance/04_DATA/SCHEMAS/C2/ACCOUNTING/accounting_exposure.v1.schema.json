{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "C2_ACCOUNTING_EXPOSURE_V1",
  "title": "C2 Accounting Exposure Artifact v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "produced_utc",
    "day_utc",
    "producer",
    "status",
    "reason_codes",
    "input_manifest",
    "exposure"
  ],
  "properties": {
    "schema_id": { "const": "C2_ACCOUNTING_EXPOSURE_V1" },
    "schema_version": { "type": "integer", "const": 1 },

    "produced_utc": { "type": "string", "minLength": 1 },
    "day_utc": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },

    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["repo", "git_sha", "module"],
      "properties": {
        "repo": { "type": "string", "minLength": 1 },
        "git_sha": { "type": "string", "pattern": "^[0-9a-f]{7,40}$" },
        "module": { "type": "string", "minLength": 1 },
        "build": { "type": "object" }
      }
    },

    "status": {
      "type": "string",
      "enum": [
        "OK",
        "DEGRADED_MISSING_MARKS",
        "DEGRADED_MISSING_LIFECYCLE",
        "FAIL_CORRUPT_INPUTS",
        "FAIL_SCHEMA_VIOLATION"
      ]
    },

    "reason_codes": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },

    "input_manifest": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "path", "sha256", "day_utc", "producer"],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "cash_ledger",
              "marks_underlying",
              "marks_options",
              "positions_truth",
              "fills_truth",
              "lifecycle_truth",
              "trade_intents",
              "order_plans",
              "broker_submissions",
              "other"
            ]
          },
          "path": { "type": "string", "minLength": 1 },
          "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
          "day_utc": {
            "anyOf": [
              { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
              { "type": "null" }
            ]
          },
          "producer": { "type": "string", "minLength": 1 }
        }
      }
    },

    "exposure": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "currency",
        "defined_risk_total",
        "by_engine",
        "by_underlying",
        "by_expiry_bucket",
        "notes"
      ],
      "properties": {
        "currency": { "type": "string", "minLength": 1 },
        "defined_risk_total": { "type": "number" },

        "by_engine": { "$ref": "#/$defs/breakdown_list" },
        "by_underlying": { "$ref": "#/$defs/breakdown_list" },
        "by_expiry_bucket": { "$ref": "#/$defs/breakdown_list" },

        "notes": { "type": "array", "items": { "type": "string" } }
      }
    }
  },

  "$defs": {
    "breakdown_list": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["key", "defined_risk"],
        "properties": {
          "key": { "type": "string", "minLength": 1 },
          "defined_risk": { "type": "number" }
        }
      }
    }
  }
}
