{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "C2_ACCOUNTING_NAV_V2",
  "title": "C2 Accounting NAV v2 (supports broker marks)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "produced_utc",
    "day_utc",
    "producer",
    "status",
    "reason_codes",
    "input_manifest",
    "nav",
    "history"
  ],
  "properties": {
    "schema_id": { "const": "C2_ACCOUNTING_NAV_V2" },
    "schema_version": { "const": 2 },
    "produced_utc": { "type": "string" },
    "day_utc": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["repo", "git_sha", "module"],
      "properties": {
        "repo": { "type": "string" },
        "git_sha": { "type": "string" },
        "module": { "type": "string" }
      }
    },
    "status": { "type": "string" },
    "reason_codes": { "type": "array", "items": { "type": "string" } },
    "input_manifest": { "type": "array", "items": { "type": "object" } },
    "nav": {
      "type": "object",
      "additionalProperties": true
    },
    "history": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
