{
  "$id": "https://constellation.local/schemas/veto_record.v1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "VetoRecord v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "observed_at_utc",
    "boundary",
    "reason_code",
    "reason_detail",
    "inputs",
    "pointers"
  ],
  "properties": {
    "schema_id": {
      "const": "veto_record"
    },
    "schema_version": {
      "const": "v1"
    },
    "observed_at_utc": {
      "type": "string",
      "format": "date-time",
      "description": "UTC timestamp in ISO-8601. Implementations MUST use Z-suffix form."
    },
    "boundary": {
      "type": "string",
      "enum": ["INTENT", "MAPPING", "SUBMIT", "OTHER"]
    },
    "reason_code": {
      "type": "string",
      "pattern": "^C2_[A-Z0-9_]+$"
    },
    "reason_detail": {
      "type": "string",
      "minLength": 1,
      "maxLength": 2000
    },
    "inputs": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "intent_hash",
        "plan_hash",
        "chain_snapshot_hash",
        "freshness_cert_hash"
      ],
      "properties": {
        "intent_hash": { "type": ["string", "null"], "pattern": "^[a-f0-9]{64}$" },
        "plan_hash": { "type": ["string", "null"], "pattern": "^[a-f0-9]{64}$" },
        "chain_snapshot_hash": { "type": ["string", "null"], "pattern": "^[a-f0-9]{64}$" },
        "freshness_cert_hash": { "type": ["string", "null"], "pattern": "^[a-f0-9]{64}$" }
      }
    },
    "pointers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 4096
      },
      "description": "File paths or object references sufficient to locate evidence inputs."
    },
    "canonical_json_hash": {
      "type": ["string", "null"],
      "pattern": "^[a-f0-9]{64}$",
      "description": "Optional at design stage. When implemented, must be SHA-256 of canonical JSON."
    },
    "upstream_hash": {
      "type": ["string", "null"],
      "pattern": "^[a-f0-9]{64}$",
      "description": "Optional pointer to upstream artifact hash when applicable."
    }
  }
}
