{
  "$id": "https://constellation.local/schemas/mapping_ledger_record.v2.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MappingLedgerRecord v2",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "record_id",
    "created_at_utc",
    "intent_hash",
    "plan_hash",
    "mapping_mode",
    "options_context",
    "equity_context",
    "selection_trace",
    "canonical_json_hash"
  ],
  "properties": {
    "schema_id": { "const": "mapping_ledger_record" },
    "schema_version": { "const": "v2" },

    "record_id": {
      "type": "string",
      "minLength": 16,
      "maxLength": 128,
      "description": "Deterministic record identifier (hash-derived preferred)."
    },

    "created_at_utc": { "type": "string", "format": "date-time" },

    "intent_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
    "plan_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" },

    "mapping_mode": {
      "type": "string",
      "enum": ["OPTIONS_VERTICAL_V1", "EQUITY_DIRECT_V1"]
    },

    "options_context": {
      "type": ["object", "null"],
      "additionalProperties": false,
      "required": ["chain_snapshot_hash", "freshness_cert_hash"],
      "properties": {
        "chain_snapshot_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
        "freshness_cert_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
      }
    },

    "equity_context": {
      "type": ["object", "null"],
      "additionalProperties": false,
      "required": ["symbol", "currency", "action", "qty_shares"],
      "properties": {
        "symbol": { "type": "string", "minLength": 1, "maxLength": 16 },
        "currency": { "type": "string", "minLength": 3, "maxLength": 3 },
        "action": { "type": "string", "enum": ["BUY", "SELL"] },
        "qty_shares": { "type": "integer", "minimum": 1, "maximum": 10000000 }
      }
    },

    "selection_trace": {
      "type": "object",
      "additionalProperties": false,
      "required": ["policy", "tie_breakers"],
      "properties": {
        "policy": { "type": "string", "minLength": 1, "maxLength": 200 },
        "tie_breakers": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1, "maxLength": 200 }
        }
      }
    },

    "canonical_json_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
  },

  "allOf": [
    {
      "if": { "properties": { "mapping_mode": { "const": "OPTIONS_VERTICAL_V1" } } },
      "then": {
        "properties": {
          "options_context": { "type": "object" },
          "equity_context": { "const": null }
        }
      }
    },
    {
      "if": { "properties": { "mapping_mode": { "const": "EQUITY_DIRECT_V1" } } },
      "then": {
        "properties": {
          "equity_context": { "type": "object" },
          "options_context": { "const": null }
        }
      }
    }
  ]
}
